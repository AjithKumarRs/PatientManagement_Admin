@model PatientManagement.Payments.PaymentInvoiceData
@{

    ViewData["Title"] = Serenity.LocalText.Get("Db.Administration.Payments.EntityPlural");
}
@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}

<!-- Main content -->
<section class="invoice">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-globe"></i> My Clario
                <small class="pull-right">Date: 2/10/2014</small>
            </h2>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            @Texts.Site.Payments.InvoiceFrom
            <address>
                <strong>@Model.FromName
                    </strong><br>
                @Model.FromAddress<br>
                @Model.FromPhone<br>
                @Model.FromBankName<br>
                @Model.FromIBAN<br>
                @Model.FromEmail
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            To
            <address>
                <strong>
                @Model.RecieverName
                    </strong><br>
                @Model.RecieverAddress<br>
                @Model.RecieverPhone<br>
                @Model.RecieverBankName<br>
                @Model.RecieverIban<br>
                @Model.RecieverBic<br/>
                @Model.RecieverEmail
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <b>Платежно #@Texts.Site.Payments.SerialNumPrefix@Model.PaymentId</b><br>
            <br>
            @*<b>Order ID:</b> 4F3S8J<br>
            <b>Payment Due:</b> 2/22/2014<br>
            <b>Account:</b> 968-34567*@
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Количество</th>
                        <th>Продукт</th>
                        <th>Сериален #</th>
                        <th>Допълнителна информация</th>
                        <th>Цема</th>
                        <th>Валута</th>
                    </tr>
                </thead>
                <tbody>
                <tr>
                    <td>1</td>
                    <td>@Model.ReasonForPayment</td>
                    <td>@Texts.Site.Subscriptions.SerialNumPrefix@Model.SubscriptionId </td>
                    <td>@Model.Description</td>
                    <td>@Model.SubTotal.ToString("#")</td>
                    <td>@Model.Currency</td>
                </tr>
                    @if (!string.IsNullOrEmpty(Model.CouponKey))
                    {
                        <tr>
                            <td>1</td>
                            <td>Coupon ID - @Model.CouponKey</td>
                            <td>@Texts.Site.Coupons.SerialNumPrefix@Model.CouponId </td>
                            <td>@Model.CouponName</td>
                            <td>-@Model.CouponDiscount%</td>
                            <td></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
        <!-- accepted payments column -->
       <div class="col-xs-6">
            @*<p class="lead">Payment Methods:</p>
            <img src="../../dist/img/credit/visa.png" alt="Visa">
            <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
            <img src="../../dist/img/credit/american-express.png" alt="American Express">
            <img src="../../dist/img/credit/paypal2.png" alt="Paypal">

            <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem plugg
                dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
            </p>*@
        </div>
        <!-- /.col -->
        <div class="col-xs-6">
            <p class="lead">Тотал за плащане
            </p>

            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th style="width:50%">Subtotal:</th>
                        <td>@Model.SubTotal.ToString("#") @Model.Currency</td>
                    </tr>
                @if (!string.IsNullOrEmpty(Model.CouponKey))
                {
                    var discountPrice = (Model.SubTotal * Model.CouponDiscount) / 100;
                    <tr>
                        <th>Discount @Model.CouponDiscount%</th>
                        <td>@discountPrice.ToString("#") @Model.Currency</td>
                    </tr>
                }
                    <tr>
                        <th>Total:</th>
                        <td>@Model.Total.ToString("#") @Model.Currency</td>
                    </tr>
                </table>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            @*<a href="#" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>*@
            @*<button type="button" class="btn btn-success pull-right">
                <i class="fa fa-credit-card"></i> Submit Payment
            </button>*@
            <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                <i class="fa fa-download"></i> Generate PDF
            </button>
        </div>
    </div>
</section>
<!-- /.content -->